{
  "name": "clipboard-manager",
  "version": "1.0.0",
  "description": "A macOS clipboard manager with visual history",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "node dev.js",
    "dev:main": "npm run copy:assets && nodemon --watch src/main --ext ts --exec \"tsc -p tsconfig.main.json && electron .\"",
    "dev:renderer": "vite",
    "copy:assets": "mkdir -p dist/assets/icons && cp -r src/assets/icons/* dist/assets/icons/",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "npm run copy:assets && tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "package": "electron-builder",
    "start": "electron ."
  },
  "keywords": [
    "clipboard",
    "manager",
    "electron",
    "macos"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.clipboardmanager.app",
    "productName": "Clipboard Manager",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "directories": {
      "output": "release"
    }
  }
}
